require 'dotenv'
Dotenv.load

default_platform(:ios)

platform :ios do
  desc "Build and distribute to Firebase App Distribution"
  lane :firebase do
    firebase_token = ENV["FIREBASE_TOKEN"]
    if firebase_token.nil? || firebase_token.empty?
      UI.user_error!("âŒ FIREBASE_TOKEN is missing! Set it in .env or export it.")
    end

    # Replace with your actual Firebase iOS App ID
    firebase_app_id = "1:181935596332:ios:ecc14a7a0491db18390289"

    # Build IPA
    UI.message("ğŸ—ï¸ Building iOS IPA...")
    sh("flutter build ipa --release")

    # Find the .ipa file
    ipa_path = Dir["build/ios/ipa/*.ipa"].first
    if ipa_path.nil? || !File.exist?(ipa_path)
      UI.user_error!("âŒ IPA file not found in build/ios/ipa/. Did the build fail?")
    end

    # Upload to Firebase
    UI.message("ğŸš€ Uploading #{ipa_path} to Firebase App Distribution...")
    sh("firebase appdistribution:distribute #{ipa_path} \
      --app #{firebase_app_id} \
      --token #{firebase_token} \
      --groups testers \
      --release-notes 'iOS release via Fastlane ğŸš€'")
  end

  desc "Build and upload to TestFlight"
  lane :testflight do
    UI.message("ğŸ“¦ Building for TestFlight...")
    build_ios_app(scheme: "Runner")

    UI.message("ğŸš€ Uploading to TestFlight...")
    upload_to_testflight
  end
end
